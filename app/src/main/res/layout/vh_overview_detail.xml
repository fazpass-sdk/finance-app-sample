<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_green_700"
    android:paddingStart="12dp"
    android:paddingTop="12dp"
    android:paddingRight="2dp"
    android:paddingBottom="12dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/guideline2">

    <TextView
        android:id="@+id/od_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checking"
        android:textColor="@color/default_text_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/od_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="********4450"
        android:textColor="#78909C"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/od_title"
        app:layout_constraintTop_toBottomOf="@+id/od_title" />

    <TextView
        android:id="@+id/od_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IDR14,500,000"
        android:textColor="@color/default_text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_image"
        app:layout_constraintEnd_toStartOf="@+id/drawer_image"
        app:layout_constraintTop_toTopOf="@+id/drawer_image" />

    <ImageView
        android:id="@+id/drawer_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_right_24" />

</androidx.constraintlayout.widget.ConstraintLayout>